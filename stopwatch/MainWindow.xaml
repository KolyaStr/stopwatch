<Window x:Class="stopwatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stopwatch"
        mc:Ignorable="d"
        Title="MainWindow" Height="265" Width="390">
    <Grid Margin="0,0,0,12" HorizontalAlignment="Center" Width="390">

        <Button Content="Stop" HorizontalAlignment="Left" Margin="63,172,0,0" VerticalAlignment="Top" Height="27" Width="55" Click="Stop_CLick"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="160,172,0,0" VerticalAlignment="Top" Height="26" Width="55" Click="Start_CLick"/>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="254,173,0,0" VerticalAlignment="Top" Height="26" Width="55" Click="Reset_Click"/>
        <Label x:Name="label1" Content="00:00:00" HorizontalAlignment="Left" Margin="110,62,0,0" VerticalAlignment="Top" Height="57" Width="143" FontSize="36"/>

    </Grid>
</Window>
